---
import { createUser, getUserByCredentials, type User } from "../lib/mongo";
import { hashPassword } from "../lib/password";
import "../styles/global.css";

let success = false;
let error = "";

if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const username = formData.get("username") as string;
    const email = formData.get("email") as string;
    const password = formData.get("password") as string;
    const confirmPassword = formData.get("confirmPassword") as string;

    // Validaciones b√°sicas
    if (!username || !email || !password || !confirmPassword) {
      error = "Todos los campos son obligatorios";
    } else if (password !== confirmPassword) {
      error = "Las contrase√±as no coinciden";
    } else if (password.length < 6) {
      error = "La contrase√±a debe tener al menos 6 caracteres";
    } else if (!/\S+@\S+\.\S+/.test(email)) {
      error = "El email no tiene un formato v√°lido";
    } else {
      // Verificar si el usuario ya existe
      const existingUser =
        (await getUserByCredentials(username)) ||
        (await getUserByCredentials(email));
      if (existingUser) {
        error = "El usuario o email ya est√°n registrados";
      } else {
        // Crear el usuario en la base de datos
        const hashedPassword = await hashPassword(password);
        const userData: User = {
          username,
          email,
          password: hashedPassword,
          role: "user",
          isActive: true,
          favoritesSeries: [],
          watchedSeries: [],
          likedAnalysis: [],
          createdAt: new Date(),
          updatedAt: new Date(),
        };

        const newUser = await createUser(userData);
        if (newUser) {
          success = true;
          console.log("Usuario creado exitosamente:", { username, email });
        } else {
          error = "Error al crear el usuario";
        }
      }
    }
  } catch (err) {
    error = "Error del servidor";
    console.error("Error en registro:", err);
  }
}
