          <!-- Im√°genes -->
          <div class="pb-6">
            <h3 class="text-lg font-medium text-white mb-4">Im√°genes</h3>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="posterUrl"
                  class="block text-sm font-medium text-gray-300 mb-2"
                >
                  URL del Poster
                </label>
                <input
                  type="url"
