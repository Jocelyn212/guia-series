---
import FringeCard from "../components/FringeCard";
import ResponsiveNav from "../components/ResponsiveNav.astro";
import { getAnalisis, getUserById, type User } from "../lib/mongo";
import { getPublicAuthUser } from "../lib/publicAuth";
import "../styles/global.css";

// Obtiene an치lisis desde MongoDB
const analisisData = await getAnalisis();

// Obtener usuario autenticado y sus datos
const currentUser = getPublicAuthUser(Astro.request);
let userData: User | null = null;
if (currentUser) {
  userData = await getUserById(currentUser.id);
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>An치lisis de Series | SeriesGuide</title>
    <meta
      name="description"
      content="Lee an치lisis profesionales y detallados de las mejores series de TV."
    />
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <!-- Navigation -->
    <ResponsiveNav />

    <main class="max-w-6xl mx-auto px-4">
      <!-- Hero Section -->
      <section class="text-center py-16">
        <div
          class="bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-2xl p-12 shadow-xl"
        >
          <h1 class="text-5xl font-bold mb-6">An치lisis Profundos</h1>
          <p class="text-xl opacity-90 max-w-3xl mx-auto leading-relaxed">
            Sum칠rgete en interpretaciones expertas, teor칤as fascinantes y
            an치lisis detallados de los episodios y series m치s impactantes de la
            televisi칩n moderna.
          </p>
          <div class="mt-8 flex justify-center gap-4 text-sm">
            <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-2">
              <span class="font-semibold">{analisisData.length}</span> an치lisis publicados
            </div>
            <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-2">
              <span class="font-semibold"
                >{
                  analisisData
                    .reduce((sum, item) => sum + (item.views || 0), 0)
                    .toLocaleString()
                }</span
              > visualizaciones
            </div>
          </div>
        </div>
      </section>

      <!-- An치lisis Grid -->
      <section class="pb-16">
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            칔ltimos An치lisis
          </h2>
          <p class="text-gray-600 text-lg">
            An치lisis frescos de los episodios y series m치s recientes
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {
            analisisData.map((item) => (
              <FringeCard
                client:load
                title={item.title}
                excerpt={item.excerpt}
                description={item.content}
                universe={item.universe || "blue"}
                author={item.author}
                readTime={item.readTime}
                views={item.views}
                likes={item.likes}
                publishedAt={item.publishedAt}
                slug={item.slug}
                analysisId={item._id?.toString()}
                isLiked={
                  userData?.likedAnalysis?.includes(
                    item._id?.toString() || ""
                  ) || false
                }
                isAuthenticated={!!currentUser}
              />
            ))
          }
        </div>

        {/* Empty State */}
        {
          analisisData.length === 0 && (
            <div class="text-center py-16">
              <div class="bg-white rounded-2xl p-12 shadow-lg">
                <div class="text-6xl mb-6">游닇</div>
                <h3 class="text-2xl font-bold text-gray-700 mb-4">
                  No hay an치lisis disponibles
                </h3>
                <p class="text-gray-500 text-lg">
                  Los an치lisis se publicar치n pr칩ximamente. 춰Mantente atento!
                </p>
              </div>
            </div>
          )
        }
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-16">
      <div class="max-w-6xl mx-auto px-4 py-12">
        <div class="text-center">
          <div class="mb-4">
            <h3 class="text-2xl font-bold mb-2">SeriesGuide</h3>
            <p class="text-gray-400">
              An치lisis profesional de series de televisi칩n
            </p>
          </div>
          <div class="border-t border-gray-800 pt-8">
            <p class="text-gray-400">
              &copy; 2024 SeriesGuide. Todos los derechos reservados.
            </p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
