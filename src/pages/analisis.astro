---
import FringeCard from "../components/FringeCard";
import ResponsiveNav from "../components/ResponsiveNav.astro";
import { getAnalisis, getUserById } from "../lib/mongo";
import { getPublicAuthUser } from "../lib/publicAuth";
import "../styles/global.css";

// Obtiene an치lisis desde MongoDB
const analisisData = await getAnalisis();

// Obtener usuario autenticado y sus datos
const currentUser = getPublicAuthUser(Astro.request);
let userData = null;
if (currentUser) {
  userData = await getUserById(currentUser.id);
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>An치lisis de Series | SeriesGuide</title>
    <meta
      name="description"
      content="Lee an치lisis profesionales y detallados de las mejores series de TV."
    />
  </head>
  <body class="bg-gray-50">
    <!-- Navigation -->
    <ResponsiveNav />

    <main class="max-w-4xl mx-auto p-4">
      <div class="text-center mb-8 mt-8">
        <h1 class="text-4xl font-bold text-slate-700 mb-4">
          An치lisis Detallados
        </h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Descubre an치lisis profundos, teor칤as fascinantes y interpretaciones
          expertas de episodios y temporadas completas.
        </p>
      </div>

      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-800">
          칔ltimos An치lisis Publicados
        </h2>
        <p class="text-gray-600">
          An치lisis frescos de los episodios y series m치s recientes
        </p>
      </div>

      <div class="grid grid-cols-1 gap-6">
        {
          analisisData.map((item) => (
            <FringeCard
              client:load
              title={item.title}
              excerpt={item.excerpt}
              description={item.content}
              universe={item.universe || "blue"}
              author={item.author}
              readTime={item.readTime}
              views={item.views}
              likes={item.likes}
              publishedAt={item.publishedAt}
              analysisId={item._id?.toString()}
              isLiked={
                userData?.likedAnalysis?.includes(item._id?.toString() || "") ||
                false
              }
              isAuthenticated={!!currentUser}
            />
          ))
        }
      </div>

      {/* Empty State */}
      {
        analisisData.length === 0 && (
          <div class="text-center py-12">
            <div class="text-6xl mb-4">游닇</div>
            <h3 class="text-xl font-semibold text-gray-600 mb-2">
